{
  "local_db_path": "/etc/x-ui/x-ui.db",
  "local_service_name": "x-ui",
  "sync_interval_minutes": 60,
  "web_panel": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "secret_key": "CHANGE_THIS_TO_RANDOM_SECRET_KEY"
  },
  "telegram": {
    "enabled": false,
    "bot_token": "",
    "chat_id": "",
    "notify_on_sync": true,
    "notify_on_error": true,
    "notify_on_package_apply": true,
    "notify_on_client_edit": true
  },
  "backup": {
    "enabled": true,
    "keep_count": 10,
    "path": "/var/lib/xui-panel-manager/backups"
  },
  "sync": {
    "retry_attempts": 8,
    "retry_delay_seconds": 1,
    "restart_service_on_lock": true,
    "parallel_execution": false
  },
  "logging": {
    "enabled": true,
    "path": "/var/log/xui-panel-manager.log",
    "level": "INFO",
    "max_size_mb": 10,
    "backup_count": 5
  },
  "security": {
    "ssh_key_path": "/etc/xui-panel-manager/id_ed25519",
    "session_timeout_minutes": 60,
    "max_login_attempts": 5,
    "lockout_duration_minutes": 15
  }
}
